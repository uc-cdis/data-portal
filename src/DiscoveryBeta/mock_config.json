{
    "features": {
      "exploration_integration": {
        "enabled": false
      },
      "views": {
        "grid_view": {
          "enabled": false
        }
      },
      "search": {
        "search_bar": {
          "enabled": true,
          "search_tags": true,
          "searchable_text_fields": [
            "study_name",
            "study_description",
            "dbgap_accession"
          ]
        }
      },
      "authorization": {
        "enabled": true,
        "request_access": {
          "enabled": true,
          "type": "global|per_study|both",
          "global": {
            "string": "You can request access by going to dbGaP, unless otherwise instructed below. \nThis is a new line."
          },
          "per_study": {
            "content_type": "string",
            "field": "access_instructions"
          }
        }
      }
    },
    "aggregations": [
        {
            "name": "Studies",
            "field": "study_id",
            "type": "count"
        },
        {
            "name": "Total Subjects",
            "field": "_subjects_count",
            "type": "sum"
        }
    ],
    "tag_selector": {
      "title": "Associated tags organized by category"
    },
    "study_columns": [
      {
        "name": "Name",
        "field": "study_name",
        "error_if_not_available": true
      },
      {
        "name": "Number of Subjects",
        "field": "num_subjects",
        "error_if_not_available": false,
        "value_if_not_available": "0"
      },
      {
        "name": "dbGaP Accession Number",
        "field": "phs_id"
      }
    ],
    "study_preview_field": {
      "name": "Description",
      "field": "study_description",
      "content_type": "string",
      "include_name": false,
      "include_if_not_available": true,
      "value_if_not_available": "No description has been provided for this study."
    },
    "study_page_fields": {
      "show_all_available_fields": false,
      "fields_to_show": [
        {
          "group_name": "Study Identifiers",
          "include_name": false,
          "fields": [
            {
              "name": "Number of Subjects",
              "field": "_subjects_count",
              "content_type": "number"
            },
            {
              "name": "Full Name",
              "field": "full_name",
              "content_type": "string"
            },
            {
              "name": "Short Name",
              "field": "short_name",
              "content_type": "string",
              "include_name": true,
              "include_if_not_available": true,
              "value_if_not_available": "N/A"
            },
            {
              "name": "dbGaP Study Accession",
              "field": "dbgap_accession",
              "content_type": "string",
              "include_name": true,
              "include_if_not_available": false
            },
            {
              "name": "Project ID",
              "field": "project_id",
              "content_type": "string",
              "include_if_not_available": false
            }
          ]
        },
        {
          "fields": [
            {
              "name": "Description",
              "field": "study_description",
              "content_type": "paragraphs",
              "include_name": false,
              "include_if_not_available": true,
              "value_if_not_available": "No description has been provided for this study."
            }
          ]
        }
      ]
    },
    "minimal_field_mapping": {
      "tags_list_field_name": "tags",
      "authz_field": "authz",
      "uid": "study_id"
    },
    "tag_categories": [
      {
        "name": "Program",
        "color": "rgb(129, 211, 248)",
        "display": true
      },
      {
        "name": "Study Registration",
        "color": "rgb(236, 128, 141)",
        "display": true
      },
      {
        "name": "Data Type",
        "color": "rgb(112, 182, 3)",
        "display": true
      }
    ]
  }
